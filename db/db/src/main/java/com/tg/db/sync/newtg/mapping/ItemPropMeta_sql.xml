<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.itemPropMeta.ItemPropMeta">
<resultMap type="util.db.sync.newtg.pojo.itemPropMeta.ItemPropMeta" id="BaseResultMap">
	<result column="pid" property="pid" jdbcType="INTEGER"/>
	<result column="name" property="name" jdbcType="VARCHAR"/>
	<result column="color_prop" property="colorProp" jdbcType="BIT"/>
	<result column="enum_prop" property="enumProp" jdbcType="BIT"/>
	<result column="sale_prop" property="saleProp" jdbcType="BIT"/>
	<result column="item_prop" property="itemProp" jdbcType="BIT"/>
</resultMap>

<sql id="cols">
	 t.pid
	, t.name
	, t.color_prop
	, t.enum_prop
	, t.sale_prop
	, t.item_prop
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from item_prop_meta t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from item_prop_meta t where 
			pid=#{value}
		
</select>
</mapper>