<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tg.db.sync.newtg.pojo.rolePermission.RolePermission">
<resultMap type="com.tg.db.sync.newtg.pojo.rolePermission.RolePermission" id="BaseResultMap">
	<result column="scope" property="scope" jdbcType="VARCHAR"/>
	<result column="id" property="id" jdbcType="BIGINT"/>
	<result column="role_id" property="roleId" jdbcType="BIGINT"/>
	<result column="permission" property="permission" jdbcType="VARCHAR"/>
</resultMap>

<sql id="cols">
	 t.scope
	, t.id
	, t.role_id
	, t.permission
</sql>

<select id="findLimit" resultMap="BaseResultMap" parameterType="com.tg.db.common.Limit" >
	select 
	<include refid="cols" />
	from role_permission t limit #{limitStart},#{limitEnd}
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from role_permission t where 
			id=#{value}
		
</select>

<insert id="insert" parameterType="com.tg.db.sync.newtg.pojo.rolePermission.RolePermission">
	insert into role_permission (
	 scope
		, id
		, role_id
		, permission
		)values(
	 #{scope}
		, #{id}
		, #{roleId}
		, #{permission}
	)
</insert>
</mapper>