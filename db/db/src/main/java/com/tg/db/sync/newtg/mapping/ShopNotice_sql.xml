<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.shopNotice.ShopNotice">
<resultMap type="util.db.sync.newtg.pojo.shopNotice.ShopNotice" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="shop_id" property="shopId" jdbcType="INTEGER"/>
	<result column="content" property="content" jdbcType="VARCHAR"/>
	<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.shop_id
	, t.content
	, t.create_time
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from shop_notice t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from shop_notice t where 
			id=#{value}
		
</select>
</mapper>