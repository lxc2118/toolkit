<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.settings.Settings">
<resultMap type="util.db.sync.newtg.pojo.settings.Settings" id="BaseResultMap">
	<result column="id" property="id" jdbcType="VARCHAR"/>
	<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
	<result column="json" property="json" jdbcType="VARCHAR"/>
	<result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.create_time
	, t.json
	, t.update_time
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from settings t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from settings t where 
			id=#{value}
		
</select>
</mapper>