<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.site.Site">
<resultMap type="util.db.sync.newtg.pojo.site.Site" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="name" property="name" jdbcType="VARCHAR"/>
	<result column="city_id" property="cityId" jdbcType="VARCHAR"/>
	<result column="province_id" property="provinceId" jdbcType="VARCHAR"/>
	<result column="status" property="status" jdbcType="VARCHAR"/>
	<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
	<result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
	<result column="district_id" property="districtId" jdbcType="VARCHAR"/>
	<result column="shown" property="shown" jdbcType="BIT"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.name
	, t.city_id
	, t.province_id
	, t.status
	, t.create_time
	, t.update_time
	, t.district_id
	, t.shown
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from site t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from site t where 
			id=#{value}
		
</select>
</mapper>