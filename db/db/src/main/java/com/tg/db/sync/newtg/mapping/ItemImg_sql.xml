<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.itemImg.ItemImg">
<resultMap type="util.db.sync.newtg.pojo.itemImg.ItemImg" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="item_id" property="itemId" jdbcType="INTEGER"/>
	<result column="img_id" property="imgId" jdbcType="INTEGER"/>
	<result column="type" property="type" jdbcType="VARCHAR"/>
	<result column="sort_order" property="sortOrder" jdbcType="INTEGER"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.item_id
	, t.img_id
	, t.type
	, t.sort_order
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from item_img t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from item_img t where 
			id=#{value}
		
</select>
</mapper>