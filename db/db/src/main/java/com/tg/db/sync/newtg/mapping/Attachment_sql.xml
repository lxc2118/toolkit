<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.attachment.Attachment">
<resultMap type="util.db.sync.newtg.pojo.attachment.Attachment" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="scope" property="scope" jdbcType="VARCHAR"/>
	<result column="name" property="name" jdbcType="VARCHAR"/>
	<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
	<result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
	<result column="uri" property="uri" jdbcType="VARCHAR"/>
	<result column="etag" property="etag" jdbcType="VARCHAR"/>
	<result column="size" property="size" jdbcType="BIGINT"/>
	<result column="shop_id" property="shopId" jdbcType="INTEGER"/>
	<result column="tag" property="tag" jdbcType="VARCHAR"/>
	<result column="suffix" property="suffix" jdbcType="VARCHAR"/>
	<result column="request_domain" property="requestDomain" jdbcType="VARCHAR"/>
	<result column="category" property="category" jdbcType="VARCHAR"/>
	<result column="type" property="type" jdbcType="VARCHAR"/>
	<result column="content_type" property="contentType" jdbcType="VARCHAR"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.scope
	, t.name
	, t.create_time
	, t.update_time
	, t.uri
	, t.etag
	, t.size
	, t.shop_id
	, t.tag
	, t.suffix
	, t.request_domain
	, t.category
	, t.type
	, t.content_type
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from attachment t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from attachment t where 
			id=#{value}
		
</select>
</mapper>