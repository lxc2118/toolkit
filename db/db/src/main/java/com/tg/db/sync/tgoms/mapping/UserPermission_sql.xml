<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tg.db.sync.tgoms.pojo.userPermission.UserPermission">
<resultMap type="com.tg.db.sync.tgoms.pojo.userPermission.UserPermission" id="BaseResultMap">
	<result column="scope" property="scope" jdbcType="VARCHAR"/>
	<result column="id" property="id" jdbcType="BIGINT"/>
	<result column="user_id" property="userId" jdbcType="VARCHAR"/>
	<result column="permission" property="permission" jdbcType="VARCHAR"/>
</resultMap>

<sql id="cols">
	 t.scope
	, t.id
	, t.user_id
	, t.permission
</sql>

<select id="findLimit" resultMap="BaseResultMap" parameterType="com.tg.db.common.Limit" >
	select 
	<include refid="cols" />
	from user_permission t limit #{limitStart},#{limitEnd}
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from user_permission t where 
			id=#{value}
		
</select>

<insert id="insert" parameterType="com.tg.db.sync.tgoms.pojo.userPermission.UserPermission">
	insert into user_permission (
	 scope
		, id
		, user_id
		, permission
		)values(
	 #{scope}
		, #{id}
		, #{userId}
		, #{permission}
	)
</insert>
</mapper>