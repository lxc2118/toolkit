<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.orderItemDetail.OrderItemDetail">
<resultMap type="util.db.sync.newtg.pojo.orderItemDetail.OrderItemDetail" id="BaseResultMap">
	<result column="id" property="id" jdbcType="BIGINT"/>
	<result column="sku_names" property="skuNames" jdbcType="VARCHAR"/>
	<result column="item_name" property="itemName" jdbcType="VARCHAR"/>
	<result column="company_name" property="companyName" jdbcType="VARCHAR"/>
	<result column="company_address" property="companyAddress" jdbcType="VARCHAR"/>
	<result column="company_phone" property="companyPhone" jdbcType="VARCHAR"/>
	<result column="order_id" property="orderId" jdbcType="BIGINT"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.sku_names
	, t.item_name
	, t.company_name
	, t.company_address
	, t.company_phone
	, t.order_id
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from order_item_detail t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from order_item_detail t where 
			id=#{value}
		
</select>
</mapper>