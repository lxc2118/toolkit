<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.attachmentRef.AttachmentRef">
<resultMap type="util.db.sync.newtg.pojo.attachmentRef.AttachmentRef" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="attachment_id" property="attachmentId" jdbcType="INTEGER"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.attachment_id
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from attachment_ref t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from attachment_ref t where 
			id=#{value}
		
</select>
</mapper>