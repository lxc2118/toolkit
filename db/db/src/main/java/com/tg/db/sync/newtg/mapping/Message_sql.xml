<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="util.db.sync.newtg.pojo.message.Message">
<resultMap type="util.db.sync.newtg.pojo.message.Message" id="BaseResultMap">
	<result column="id" property="id" jdbcType="INTEGER"/>
	<result column="title" property="title" jdbcType="VARCHAR"/>
	<result column="content" property="content" jdbcType="VARCHAR"/>
	<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
	<result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
	<result column="user_id" property="userId" jdbcType="INTEGER"/>
	<result column="order_id" property="orderId" jdbcType="INTEGER"/>
	<result column="supplier_id" property="supplierId" jdbcType="INTEGER"/>
	<result column="type" property="type" jdbcType="VARCHAR"/>
	<result column="status" property="status" jdbcType="VARCHAR"/>
</resultMap>

<sql id="cols">
	 t.id
	, t.title
	, t.content
	, t.create_time
	, t.update_time
	, t.user_id
	, t.order_id
	, t.supplier_id
	, t.type
	, t.status
</sql>

<select id="findAll" resultMap="BaseResultMap" parameterType="util.db.query.Query" >
	select 
	<include refid="cols" />
	from message t
	<include refid="sql.page"></include>
</select>

<select id="get" resultMap="BaseResultMap" parameterType="Object">
	select <include refid="cols" /> from message t where 
			id=#{value}
		
</select>
</mapper>