<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blaze.dao.ProxyDao">
	<resultMap type="com.blaze.biz.Proxy" id="BaseResultMap">
		<result column="id" property="id" jdbcType="BIGINT" />
		<result column="ip" property="ip" jdbcType="VARCHAR" />
		<result column="port" property="port" jdbcType="INTEGER" />
		<result column="anonymity" property="anonymity" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="country" property="country" jdbcType="VARCHAR" />
		<result column="address" property="address" jdbcType="VARCHAR" />
		<result column="speed" property="speed" jdbcType="DOUBLE" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
	</resultMap>
	
	<update id="update" parameterType="long" >
		update proxy set 
			ip=#{ip}
			, port=#{port}
			, anonymity=#{anonymity}
			, type=#{type}
			, country=#{country}
			, address=#{address}
			, speed=#{speed}
			, update_time=#{updateTime}
			where 
				 id=#{id}
	</update>

	<delete id="del" parameterType="long">
		delete from proxy where id=#{id}
	</delete>

	<select id="get" parameterType="long" resultMap="BaseResultMap">
		select * from proxy where id=#{id}
	</select>

	<select id="findAll" resultMap="BaseResultMap">
		select * from proxy
	</select>
</mapper>